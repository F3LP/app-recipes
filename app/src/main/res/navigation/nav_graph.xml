<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.br.myrecipes.ui.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_AddRecipeFragment"
            app:destination="@id/AddRecipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddRecipeFragment"
        android:name="com.br.myrecipes.ui.addrecipes.AddRecipeFragment"
        android:label="@string/add_recipe_fragment_label"
        tools:layout="@layout/add_recipe_fragment">

        <action
            android:id="@+id/action_AddRecipeFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>